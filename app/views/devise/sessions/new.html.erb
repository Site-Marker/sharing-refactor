<div class="min-h-screen bg-gray-800 text-white flex flex-col items-center justify-center p-4">
    <div class="text-center">

    <h1 class="text-4xl font-bold mb-2">Sharing</h1>
    <p class="text-xl text-gray-400 mb-8">Simplify your access management</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="bg-white p-5 rounded mb-6">
    <%= devise_error_messages! %>
        <h2 class="text-2xl text-left text-gray-800 font-bold mb-3">Log in</h2>

  <div class="text-left mb-2">
    <%= f.label :email, class:"text-gray-600 mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-black rounded w-full border border-gray-400 p-2 mt-1", placeholder:"robertpaulson@email.com" %>
  </div>

  <div class="text-left">
    <%= f.label :password, class:"text-gray-600 mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class:"text-black rounded w-full border border-gray-400 p-2 mt-1", placeholder:"*******" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="text-left py-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"text-gray-600" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"rounded p-3 bg-primary w-full" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
