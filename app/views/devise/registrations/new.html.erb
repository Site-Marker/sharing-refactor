<div class="min-h-screen bg-gray-800 text-white flex flex-col items-center justify-center p-4">
    <div class="text-center">

    <h1 class="text-4xl font-bold mb-2">Sharing</h1>
    <p class="text-xl text-gray-400 mb-8">Simplify your access management</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="bg-white p-5 rounded mb-6">
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="text-2xl text-left text-gray-800 font-bold mb-3">Sign up</h2>
  <div class="text-left mb-2">
    <%= f.label :email, class:"text-gray-600 mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-black rounded w-full border border-gray-400 p-2 mt-1", placeholder:"robertpaulson@email.com" %>
  </div>

  <div class="text-left mb-2">
    <%= f.label :password, class:"text-gray-600 mb-2" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"text-black rounded w-full border border-gray-400 p-2 mt-1", placeholder:"*******" %>
  </div>

  <div class="text-left mb-5">
    <%= f.label :password_confirmation, class:"text-gray-600 mb-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text-black rounded w-full border border-gray-400 p-2 mt-1", placeholder:"*******" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"rounded p-3 bg-primary w-full" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
